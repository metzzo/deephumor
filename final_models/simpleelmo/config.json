{
    "dataset_reader": {
        "type": "deephumor-dataset",
        "lazy": true,
        "token_indexers": {
            "tokens": {
                "type": "elmo_characters"
            }
        }
    },
    "iterator": {
        "type": "bucket",
        "batch_size": 128,
        "max_instances_in_memory": 512,
        "sorting_keys": [
            [
                "tokens",
                "num_tokens"
            ]
        ]
    },
    "model": {
        "type": "jigsaw-lstm",
        "encoder": {
            "type": "cnn",
            "embedding_dim": 256,
            "num_filters": 6
        },
        "word_embeddings": {
            "type": "basic",
            "token_embedders": {
                "tokens": {
                    "type": "elmo_token_embedder",
                    "do_layer_norm": false,
                    "dropout": 0,
                    "options_file": "https://s3-us-west-2.amazonaws.com/allennlp/models/elmo/2x1024_128_2048cnn_1xhighway/elmo_2x1024_128_2048cnn_1xhighway_options.json",
                    "weight_file": "https://s3-us-west-2.amazonaws.com/allennlp/models/elmo/2x1024_128_2048cnn_1xhighway/elmo_2x1024_128_2048cnn_1xhighway_weights.hdf5"
                }
            }
        }
    },
    "train_data_path": "/home/rfischer/Documents/DeepHumor/data/original_export/train_set.p",
    "validation_data_path": "/home/rfischer/Documents/DeepHumor/data/original_export/validation_set.p",
    "trainer": {
        "cuda_device": 0,
        "num_epochs": 200,
        "optimizer": {
            "type": "adam",
            "eps": 1e-08,
            "lr": 0.0001,
            "weight_decay": 0
        },
        "patience": 10
    }
}