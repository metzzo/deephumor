local embedding_dim = 256;
local hidden_dim = 128;

{
    "dataset_reader": {
        "type": "jigsaw-dataset",
        "lazy": true,
        "token_indexers": {
          "tokens": {
            "type": "elmo_characters"
          }
        }
    },
    "train_data_path": "../dataset/jigsaw/train.csv",
    "validation_data_path": "../dataset/jigsaw/validation.csv",
    "model": {
        "type": "jigsaw-lstm",
        "word_embeddings": {
            "type": "basic",
            "token_embedders": {
                "tokens": {
                    "type": "elmo_token_embedder",
                    "options_file": "https://s3-us-west-2.amazonaws.com/allennlp/models/elmo/2x1024_128_2048cnn_1xhighway/elmo_2x1024_128_2048cnn_1xhighway_options.json",
                    "weight_file": "https://s3-us-west-2.amazonaws.com/allennlp/models/elmo/2x1024_128_2048cnn_1xhighway/elmo_2x1024_128_2048cnn_1xhighway_weights.hdf5",
                    "do_layer_norm": false,
                    "dropout": 0.5
                }
            }
        },
        "encoder": {
            "type": "lstm",
            "input_size": embedding_dim,
            "hidden_size": hidden_dim
        }
    },
    "iterator": {
        "type": "bucket",
        "batch_size": 32,
        "max_instances_in_memory": 32,
        "sorting_keys": [
            ["tokens", "num_tokens"]
        ]
    },
    "trainer": {
        "optimizer": {
            "type": "adam",
            "lr": 0.001,
            "eps": 1e-8,
            "weight_decay": 0
        },
        "num_epochs": 1,
        "cuda_device": 0,
        "patience": 10
    }
}