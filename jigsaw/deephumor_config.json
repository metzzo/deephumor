{
    "dataset_reader": {
        "type": "deephumor-dataset",
        "lazy": true,
        "token_indexers": {
          "tokens": {
            "type": "elmo_characters"
          }
        }
    },
    "train_data_path": "C:/Users/rfischer/Development/DeepHumor/export/original_export/train_set.p",
    "validation_data_path": "C:/Users/rfischer/Development/DeepHumor/export/original_export/validation_set.p",
    "model": {
        "type": "jigsaw-lstm",
        "word_embeddings": {
            "type": "basic",
            "token_embedders": {
                "tokens": {
                    "type": "elmo_token_embedder",
                    "options_file": "https://s3-us-west-2.amazonaws.com/allennlp/models/elmo/2x1024_128_2048cnn_1xhighway/elmo_2x1024_128_2048cnn_1xhighway_options.json",
                    "weight_file": "https://s3-us-west-2.amazonaws.com/allennlp/models/elmo/2x1024_128_2048cnn_1xhighway/elmo_2x1024_128_2048cnn_1xhighway_weights.hdf5",
                    "do_layer_norm": false,
                    "dropout": 0.0
                }
            }
        },
        "encoder": {
            "type": "cnn",
            "embedding_dim": 256,
            "num_filters": 4
        }
    },
    "iterator": {
        "type": "bucket",
        "batch_size": 512,
        "max_instances_in_memory": 512,
        "sorting_keys": [
            ["tokens", "num_tokens"]
        ]
    },
    "trainer": {
        "optimizer": {
            "type": "adam",
            "lr": 0.1,
            "eps": 1e-8,
            "weight_decay": 0.0001
        },
        "num_epochs": 2000,
        "cuda_device": 0,
        "patience": 1000
    }
}